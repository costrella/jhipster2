<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/relativeLayoutRaport"
    tools:context="com.costrella.android.cechini.activities.raport.RaportActivity">

    <ProgressBar
        android:id="@+id/raport_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Opis"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.79"
                android:ems="10"
                android:inputType="textMultiLine" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/z_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/z_a"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/z_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/z_b"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/z_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/z_c"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/z_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/z_d"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/z_e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/z_e"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/z_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/z_f"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/z_g"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/z_g"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/z_h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/z_h"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/warehouse"
                android:id="@+id/textView5" />
            <Spinner
                android:id="@+id/spinner"
                android:drawSelectorOnTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Zdjęcia" />

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageButton
                    android:id="@+id/btnImg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_row="0"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/btnImg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_row="1"
                    android:src="@android:drawable/ic_menu_gallery" />

                <ImageButton
                    android:id="@+id/btnImg1a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="8"
                    android:layout_gravity="center_vertical"
                    android:layout_row="0"
                    android:layout_weight="1"
                    android:src="@android:drawable/ic_menu_camera"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/btnImg2a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="8"
                    android:layout_gravity="center_vertical"
                    android:layout_row="1"
                    android:layout_weight="1"
                    android:src="@android:drawable/ic_menu_camera"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/btnImg3a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="8"
                    android:layout_gravity="center_vertical"
                    android:layout_row="2"
                    android:layout_weight="1"
                    android:src="@android:drawable/ic_menu_camera"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/btnRotateLeft1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="9"
                    android:layout_gravity="center_vertical"
                    android:layout_row="0"
                    android:layout_weight="1"
                    android:src="@drawable/ic_rotate_left_black_24dp"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/btnRotateRight1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="11"
                    android:layout_gravity="center_vertical"
                    android:layout_row="0"
                    android:layout_weight="1"
                    android:src="@drawable/ic_rotate_right_black_24dp"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/btnRotateLeft2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="9"
                    android:layout_gravity="center_vertical"
                    android:layout_row="1"
                    android:layout_weight="1"
                    android:src="@drawable/ic_rotate_left_black_24dp"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/btnRotateRight2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="11"
                    android:layout_gravity="center_vertical"
                    android:layout_row="1"
                    android:layout_weight="1"
                    android:src="@drawable/ic_rotate_right_black_24dp"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/btnRotateLeft3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="9"
                    android:layout_gravity="center_vertical"
                    android:layout_row="2"
                    android:layout_weight="1"
                    android:src="@drawable/ic_rotate_left_black_24dp"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/btnRotateRight3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="11"
                    android:layout_gravity="center_vertical"
                    android:layout_row="2"
                    android:layout_weight="1"
                    android:src="@drawable/ic_rotate_right_black_24dp"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="10"
                    android:layout_margin="5dp"
                    android:layout_row="0"
                    android:background="#413a3a"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="10"
                    android:layout_margin="5dp"
                    android:layout_row="1"
                    android:adjustViewBounds="false"
                    android:background="#413a3a"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/btnImg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_row="2"
                    android:src="@android:drawable/ic_menu_gallery" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_column="10"
                    android:layout_margin="5dp"
                    android:layout_row="2"
                    android:background="#413a3a"
                    android:scaleType="fitXY" />

            </GridLayout>


            <Button
                android:id="@+id/btnSend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#0095ff"
                android:text="WYŚLIJ" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
